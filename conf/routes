# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Serve index page from public directory
GET     /                           controllers.FrontendController.index()

# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /api/summary                controllers.HomeController.appSummary

# Test cookies
GET    /api/cookie                  controllers.CookieController.cookieGet

#Test Database
GET   /api/database                 controllers.DatabaseController.databaseGet


+ nocsrf
POST /api/register                  controllers.DatabaseController.register

+nocsrf
POST /api/login                     controllers.DatabaseController.login

+nocsrf
POST /api/createEntry               controllers.DatabaseController.createEntry

+nocsrf
POST /api/updateentry               controllers.DatabaseController.updateEntry

# Serve static assets under public directory
GET     /*file                      controllers.FrontendController.assetOrDefault(file)
